<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/saldo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_fatura"
        />

    <TextView
        android:id="@+id/txt_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_saldo"
        app:layout_constraintStart_toStartOf="@id/img_saldo"
        app:layout_constraintEnd_toEndOf="@id/img_saldo"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/img_fatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fatura"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_saldo"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/txt_fatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fatura"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_fatura"
        app:layout_constraintStart_toStartOf="@id/img_fatura"
        app:layout_constraintEnd_toEndOf="@id/img_fatura"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/img_poupanca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/poupanca"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt_saldo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_transferencia"
        />

    <TextView
        android:id="@+id/txt_poupanca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poupança"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_poupanca"
        app:layout_constraintStart_toStartOf="@id/img_poupanca"
        app:layout_constraintEnd_toEndOf="@id/img_poupanca"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/img_transferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/transferencia"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txt_fatura"
        app:layout_constraintStart_toEndOf="@id/img_poupanca"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_transferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferência"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_transferencia"
        app:layout_constraintStart_toStartOf="@id/img_transferencia"
        app:layout_constraintEnd_toEndOf="@id/img_transferencia"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>